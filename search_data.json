---
layout: null
---
[
{% for post in site.posts %}
{
"title"    : "{{ post.title }}",
"category" : "{{ post.categories | join: ', ' }}",
"tags"     : "{{ post.tags | join: ', ' }}",
"content": {{ post.content | strip_html | strip_newlines | jsonify }},
"url"      : "{{ site.baseurl }}{{ post.url }}",
"date"     : "{{ post.date }}"
} {% unless forloop.last %},{% endunless %}
{% endfor %}
]